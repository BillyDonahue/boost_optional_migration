{
        // See https://go.microsoft.com/fwlink/?LinkId=733558
        // for the documentation about the tasks.json format
        "version": "2.0.0",
        "tasks": [
                {
                        "label": "./build.sh",
                        "type": "shell",
                        "command": "./build.sh"
                },
                {
                        "label": "cmake --build",
                        "type": "shell",
                        "command": "cmake --build .",
                        "options": {
                                "cwd": "${workspaceFolder}/build"
                        },
                        "problemMatcher": ["$gcc"],
                        "group": {
                                "kind": "build",
                                "isDefault": true
                        }
                }
        ]
}